<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:actionButtonStyle">@style/ActionButton</item>
    </style>

    <style name="ActionButton" parent="@android:style/Widget.ActionButton">
        <item name="android:drawablePadding">@dimen/story_horizontal_margin</item>
    </style>

    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">@dimen/story_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/story_horizontal_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">35dp</item>
    </style>

    <style name="CustomOutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">@dimen/story_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/story_horizontal_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="cornerRadius">35dp</item>
    </style>

    <style name="StoryText" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:paddingBottom">@dimen/story_vertical_margin</item>
        <item name="android:paddingRight">@dimen/story_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/story_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/story_vertical_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="HeaderText" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingRight">@dimen/story_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/story_horizontal_margin</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/noto_serif_jp_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="StoryHeaderText" parent="@style/HeaderText">
        <item name="android:textSize">@dimen/story_header_text_size</item>
    </style>

    <style name="BigText" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingRight">@dimen/story_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/story_horizontal_margin</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/noto_serif_jp_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextButton" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PathsToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="StoryToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPage</item>
        <item name="android:elevation">0dp</item>
    </style>
</resources>
